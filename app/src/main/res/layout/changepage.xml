<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE"
            android:textSize="60dp"
            android:fontFamily="@font/kgsummersunshineblackout"
            android:textColor="@color/EditColor2"
            android:layout_marginTop="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:hint="새 비밀번호 입력"
            android:layout_marginVertical="5dp"
            android:id="@+id/chpwd1"
            android:theme="@style/EditTheme2" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:hint="비밀번호 확인"
            android:layout_marginTop="20dp"
            android:layout_marginVertical="5dp"
            android:id="@+id/chpwd2"
            android:theme="@style/EditTheme2"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="변경"
            android:fontFamily="monospace"
            android:id="@+id/chbtn"
            android:layout_marginVertical="10dp"
            android:background="@color/EditColor2"
            android:textColor="#FFFFFF"/>


    </LinearLayout>



</LinearLayout>